<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state (Changes to red when pressed) -->
    <item android:state_pressed="true" android:drawable="@drawable/ic_delete_pressed"/>

    <!-- Focused state (For accessibility & keyboard focus) -->
    <item android:state_focused="true" android:drawable="@drawable/ic_delete_pressed"/>

    <!-- Default state -->
    <item android:drawable="@drawable/ic_delete"/>

</selector>
